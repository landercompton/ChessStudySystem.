@{
    ViewData["Title"] = "Chess Study";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="fas fa-chess"></i> Chess Study</h2>
            <p class="text-muted">Analyze chess positions with Lichess engine</p>
        </div>
    </div>

    <div class="row">
        <!-- Chessboard Column -->
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div id="chessboard" style="width: 100%; max-width: 600px; margin: 0 auto;"></div>
                </div>
            </div>
        </div>

        <!-- Analysis Panel -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-brain"></i> Engine Analysis</h5>
                </div>
                <div class="card-body">
                    <!-- Analysis Controls -->
                    <div class="mb-3">
                        <button id="analyzeBtn" class="btn btn-primary w-100">
                            <i class="fas fa-search"></i> Analyze Position
                        </button>
                    </div>

                    <!-- Evaluation Display -->
                    <div class="mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong>Evaluation:</strong>
                            <span id="evaluation" class="badge bg-secondary">--</span>
                        </div>
                        <div class="evaluation-bar-container">
                            <div class="evaluation-bar">
                                <div class="evaluation-indicator" id="evalBar"></div>
                            </div>
                        </div>
                    </div>

                    <!-- Best Move -->
                    <div class="mb-3">
                        <strong>Best Move:</strong>
                        <div id="bestMove" class="text-primary fs-5">--</div>
                    </div>

                    <!-- Analysis Details -->
                    <div class="mb-3">
                        <strong>Depth:</strong>
                        <span id="depth" class="text-info">--</span>
                    </div>

                    <div class="mb-3">
                        <strong>Principal Variation:</strong>
                        <div id="principalVariation" class="small text-muted">--</div>
                    </div>

                    <!-- Status -->
                    <div class="mb-3">
                        <div id="analysisStatus" class="text-muted">Ready</div>
                    </div>
                </div>
            </div>

            <!-- Move History -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-list"></i> Move History</h6>
                </div>
                <div class="card-body">
                    <div id="moveHistory" class="move-history">
                        <div class="text-muted text-center">No moves yet</div>
                    </div>
                </div>
            </div>

            <!-- Position Info -->
            <div class="card mt-3">
                <div class="card-header">
                    <h6><i class="fas fa-info-circle"></i> Position</h6>
                </div>
                <div class="card-body">
                    <div class="mb-2">
                        <strong>To Move:</strong>
                        <span id="toMove" class="badge bg-primary">White</span>
                    </div>
                    <div class="mb-2">
                        <strong>FEN:</strong>
                        <div id="currentFen" class="small font-monospace text-break">
                            rnbqkbnr/pppppppp/8/8/8/8/PPPPPPPP/RNBQKBNR w KQkq - 0 1
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Include Chess.js -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/chess.js/1.0.0-beta.6/chess.min.js"></script>

<!-- Include Chessground -->
<link rel="stylesheet" href="~/js/chessground/chessground.base.css" />
<link rel="stylesheet" href="~/js/chessground/chessground.brown.css" />
<link rel="stylesheet" href="~/js/chessground/chessground.cburnett.css" />
<script src="~/js/chessground/chessground.min.js"></script>

<!-- Custom Chess Script -->
<script src="~/js/chess-study-clean.js"></script>

<style>
    .evaluation-bar-container {
        width: 100%;
        height: 20px;
        background: #f8f9fa;
        border: 1px solid #dee2e6;
        border-radius: 4px;
        position: relative;
        overflow: hidden;
    }

    .evaluation-bar {
        width: 100%;
        height: 100%;
        background: linear-gradient(to right, #dc3545 0%, #ffc107 50%, #28a745 100%);
        position: relative;
    }

    .evaluation-indicator {
        position: absolute;
        top: 0;
        left: 50%;
        width: 3px;
        height: 100%;
        background: #000;
        transform: translateX(-50%);
        transition: left 0.3s ease;
    }

    .move-history {
        max-height: 200px;
        overflow-y: auto;
    }

    .move-item {
        display: inline-block;
        padding: 2px 6px;
        margin: 2px;
        border-radius: 3px;
        cursor: pointer;
        background: #f8f9fa;
    }

    .move-item:hover {
        background: #e9ecef;
    }

    .move-item.active {
        background: #007bff;
        color: white;
    }

    #chessboard {
        aspect-ratio: 1;
    }
</style>