<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ChessStudySystem.Web</title>

    <!-- Local Chessground CSS - Updated paths -->
    <link rel="stylesheet" href="~/css/chessground/chessground.base.css">
    <link rel="stylesheet" href="~/css/chessground/chessground.brown.css">
    <link rel="stylesheet" href="~/css/chessground/chessground.cburnett.css">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">

    <!-- Custom Chess Study Styles -->
    <link rel="stylesheet" href="~/css/chess-study.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <strong>Chess Study System</strong>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Chess" asp-action="Study">Study</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="openingsDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-chess me-1"></i>Openings
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="openingsDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Chess" asp-action="ViewOpenings">
                                        <i class="fas fa-list me-2"></i>Browse Database
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Chess" asp-action="ImportEco">
                                        <i class="fas fa-upload me-2"></i>Import ECO Data
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="searchOpenings()">
                                        <i class="fas fa-search me-2"></i>Quick Search
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" href="#" id="lichessDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-download me-1"></i>Lichess Games
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="lichessDropdown">
                                <li>
                                    <a class="dropdown-item" asp-controller="Lichess" asp-action="Import">
                                        <i class="fas fa-download me-2"></i>Import Games
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Lichess" asp-action="Search">
                                        <i class="fas fa-search me-2"></i>Search Games
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" href="https://lichess.org" target="_blank">
                                        <i class="fas fa-external-link-alt me-2"></i>Visit Lichess
                                    </a>
                                </li>
                            </ul>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ChessStudySystem.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        function searchOpenings() {
            const searchTerm = prompt("Enter opening name or ECO code:");
            if (searchTerm && searchTerm.trim()) {
                window.location.href = `/Chess/ViewOpenings?search=${encodeURIComponent(searchTerm.trim())}`;
            }
        }
    </script>
</body>
</html>